generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  publicKey        String
  hasConnectedWeb3 Boolean
  userId           String
  version          Int
  displayName      String
  created          DateTime @default(now())
}

model RecordedGame {
  id          Int      @id @default(autoincrement())
  gameId      Int
  frames      String
  seed        Int
  playerIndex Int
  created     DateTime @default(now())
}

model Game {
  id      Int      @id @default(autoincrement())
  name    String
  created DateTime @default(now())
}

model PlayedMatch {
  ID                 Int     @id @unique(map: "sqlite_autoindex_PlayedMatch_1") @default(autoincrement())
  startDate          Int?
  endDate            Int?
  scores             String?
  miniGameCollection String?
  seed               Int?
  playerUserIds      String?
  miniGameIds        String?
  parcel             String?
  gameInstanceId     Int?
  playerDisplayNames String?
}

model PlayedMatchPlayer {
  ID            Int @id @unique(map: "sqlite_autoindex_PlayedMatchPlayer_1") @default(autoincrement())
  playedMatchId Int
  playerId      Int
}